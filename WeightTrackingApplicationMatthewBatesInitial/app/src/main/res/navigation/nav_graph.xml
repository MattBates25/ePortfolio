<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.test.weighttrackingapplicationmatthewbates.LoginFragment"
        android:label="Login Screen"
        tools:layout="@layout/fragment_login" />

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.test.weighttrackingapplicationmatthewbates.HomeFragment"
        android:label="Home Screen"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_progressFragment"
            app:destination="@id/progressFragment" />
        <action
            android:id="@+id/action_homeFragment_to_goalFragment"
            app:destination="@id/goalFragment" />
    </fragment>

    <!-- Progress Fragment -->
    <fragment
        android:id="@+id/progressFragment"
        android:name="com.test.weighttrackingapplicationmatthewbates.ProgressFragment"
        android:label="Progress Screen"
        tools:layout="@layout/fragment_progress">
        <action
            android:id="@+id/action_progressFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_progressFragment_to_goalFragment"
            app:destination="@id/goalFragment" />
    </fragment>

    <!-- Goal Fragment -->
    <fragment
        android:id="@+id/goalFragment"
        android:name="com.test.weighttrackingapplicationmatthewbates.GoalFragment"
        android:label="Goal Screen"
        tools:layout="@layout/fragment_goal">
        <action
            android:id="@+id/action_goalFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_goalFragment_to_progressFragment"
            app:destination="@id/progressFragment" />
    </fragment>

</navigation>
