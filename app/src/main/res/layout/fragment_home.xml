<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".HomeFragment">

    <!-- RECENT WEIGHT LABEL -->
    <TextView
        android:id="@+id/recent_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_weight"
        android:textSize="24sp"
        android:textAppearance="?attr/textAppearanceOverline"
        app:layout_constraintBottom_toTopOf="@+id/recent_weight_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <!-- RECENT WEIGHT VALUE -->
    <TextView
        android:id="@+id/recent_weight_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline2"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/goal_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recent_weight_label"
        android:gravity="center"
        tools:text="175.5" />

    <!-- GOAL LABEL -->
    <TextView
        android:id="@+id/goal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_goal"
        android:textSize="24sp"
        android:textAppearance="?attr/textAppearanceOverline"
        app:layout_constraintBottom_toTopOf="@+id/goal_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recent_weight_text_view" />

    <!-- GOAL VALUE -->
    <TextView
        android:id="@+id/goal_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goal_label"
        android:gravity="center"
        tools:text="165.0" />

</androidx.constraintlayout.widget.ConstraintLayout>